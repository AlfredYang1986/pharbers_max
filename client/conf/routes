# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# 业务模块
#   用户登录
GET     /                                   controllers.alMaxRouterController.login
GET		/login						        controllers.alMaxRouterController.login
POST	/login						        controllers.alMaxRouterController.login
POST	/login/start			            controllers.LoginController.Login
#   用户注册
GET		/register					        controllers.alMaxRouterController.register
#   首页
GET		/index						        controllers.alMaxRouterController.index
POST	/index						        controllers.alMaxRouterController.index
#   文件上传
GET		/filesupload				        controllers.alMaxRouterController.filesUpload
GET     /pharbers/files/:name               controllers.FopController.downloadFile(name)
POST	/pharbers/files/upload		        controllers.FopController.uploadFile
POST    /filesUpload/scpCopyFiles           controllers.FilesUploadController.scpCopyFiles
POST    /filesUpload/removeFiles            controllers.FilesUploadController.removeFiles
#   样本检查
GET		/samplecheck				        controllers.alMaxRouterController.sampleCheck
POST	/samplecheck/check			        controllers.SampleCheckController.sampleCheck
#   样本报告
GET		/samplereport				        controllers.alMaxRouterController.samplereport
POST	/samplereport/report		        controllers.SampleReportController.sampleReport
#   结果检查
GET		/resultcheck				        controllers.alMaxRouterController.resultcheck
POST	/resultcheck/linechart	            controllers.ResultCheckController.resultChecklinechart
POST	/resultcheck/histogram              controllers.ResultCheckController.resultCheckhistogram
#   结果查询
GET		/resultquery				        controllers.alMaxRouterController.resultQuery
POST 	/resultquery/search			        controllers.ResultQueryController.resultQuerySearch
#   公司管理
GET     /usermanage                         controllers.alMaxRouterController.usermanage
POST    /usermanage/company/query           controllers.CompanyManageController.queryCompanys
POST    /usermanage/company/delete          controllers.CompanyManageController.deleteCompany
POST    /usermanage/company/findOne         controllers.CompanyManageController.findOneCompany
POST    /usermanage/company/save            controllers.CompanyManageController.saveCompany
#   用户管理
POST    /usermanage/user/query              controllers.UserManageController.queryUsers
POST    /usermanage/user/delete             controllers.UserManageController.deleteUser
POST    /usermanage/user/findOne            controllers.UserManageController.findOneUser
POST    /usermanage/user/save               controllers.UserManageController.saveUser
#   市场管理
GET     /marketmanage                       controllers.alMaxRouterController.marketmanage
POST    /marketmanage/query                 controllers.MarketManageController.queryMarkets
POST    /marketmanage/delete                controllers.MarketManageController.deleteMarket
POST    /marketmanage/findOne               controllers.MarketManageController.findOneMarket
POST    /marketmanage/save                  controllers.MarketManageController.saveMarket
#   公用部分
POST    /callhttpServer                     controllers.CallAkkaHttpController.callHttpServer
POST    /loadPageData                       controllers.PageInitializationController.loadPageData

# new ember web pages
GET     /new/*path                          controllers.alMaxRouterController.emberWebPage(path)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                        controllers.Assets.versioned(path="/public", file: Asset)
