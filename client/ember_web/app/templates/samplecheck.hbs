<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>样本检查</h2>
        <ol class="breadcrumb">
            <li>
                <a href="index.html">首页</a>
            </li>
            <li class="active">
                <strong>样本检查</strong>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeIn">
    <div class="p-w-md m-t-sm">
        <div class="row">
            <div class="col-sm-3 col-md-3">
                <div class="form-group">
                    <label class="control-label" for="status">市场</label>
                    <select data-name="search-result-market" onchange="sampleCheckFun()" class="form-control">
                        {{#each markets as |market|}}
                            <option>{{market}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
            <div class="col-sm-3 col-md-3">
                <div class="form-group">
                    <label class="control-label">日期</label>
                    <select data-name="search-result-date" onchange="sampleCheckFun()" class="form-control">
                        {{#each dates as |date|}}
                            <option>{{date.name}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
        </div>

        <div class="row" style="margin-bottom: 20px;">
            <div class="col-lg-4">
                <h1 class="m-b-xs" id="Current_Month_HospitalNum">
                    0
                </h1>
                <small>
                    当期医院数量
                </small>
                <div id="hospline" style="height:90px;"></div>
                <div class="row">
                    <div class="col-xs-4">
                        <small class="stats-label">上期</small>
                        <h4 id="Early_Month_HospitalNum">0</h4>
                    </div>
                    <div class="col-xs-4">
                        <small class="stats-label">去年同期</small>
                        <h4 id="Last_Year_HospitalNum">0</h4>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <h1 class="m-b-xs" id="Current_Month_ProductNum">
                    0
                </h1>
                <small>
                    当期产品数量
                </small>
                <div id="prodline" style="height:90px"></div>
                <div class="row">
                    <div class="col-xs-4">
                        <small class="stats-label">上期</small>
                        <h4 id="Early_Month_ProductNum">0</h4>
                    </div>
                    <div class="col-xs-4">
                        <small class="stats-label">去年同期</small>
                        <h4 id="Last_Year_ProductNum">0</h4>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <h1 class="m-b-xs" id="Current_Month_MarketNum">
                    0
                </h1>
                <small>
                    当期市场数量
                </small>
                <div id="markline" style="height:90px"></div>
                <div class="row">
                    <div class="col-xs-4">
                        <small class="stats-label">上期</small>
                        <h4 id="Early_Month_MarketNum">0</h4>
                    </div>
                    <div class="col-xs-4">
                        <small class="stats-label">去年同期</small>
                        <h4 id="Last_Year_MarketNum">0</h4>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-content">
                        <div id="Sales" style="height:400px"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-content">
                        <div id="Units" style="height:400px"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-content">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                <tr>
                                    <th>序号</th>
                                    <th>医院名称</th>
                                    <th>省份</th>
                                    <th>城市</th>
                                    <th>城市级别</th>
                                    <th>状态</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-lg-12 text-right">
                            <button type="button" class="btn btn-primary btn-sm" id="nextstepBtm">下一步</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="/assets/js/business/samplecheck.js"></script>
<script type="text/javascript" src="/assets/js/plugins/sparkline/jquery.sparkline.min.js"></script>